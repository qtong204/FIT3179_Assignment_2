{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Stacked area chart showing the growth of renewable energy share across ASEAN countries (2010–2020).",
  "title": "Renewable Energy Share Over Time (2010–2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/qtong204/FIT3179_Assignment_2/refs/heads/main/ASEAN_economy_climate.csv"
  },
  "mark": {
    "type": "area",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Renewable_Energy_%",
      "type": "quantitative",
      "title": "Renewable Energy (%)",
      "stack": "normalize"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "scale": {"scheme": "category20"},
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Year", "type": "temporal"},
      {
        "field": "Renewable_Energy_%",
        "type": "quantitative",
        "title": "Renewable Energy (%)",
        "format": ".1f"
      },
      {
        "title": "Note",
        "condition": {
          "test": "datum['Renewable_Energy_%'] == 0",
          "value": "Official data not reported — assumed 0%"
        },
        "value": ""
      }
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "style": {"guide-label": {"font": "Arial"}, "guide-title": {"font": "Arial"}}
  }
}
